rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // 사용자 정보
    match /users/{userId} {
      allow read: if request.auth != null &&
        (request.auth.uid == userId || isAdmin());
      allow create: if request.auth != null &&
        request.auth.uid == userId &&
        (
          request.resource.data.role == 'user' ||
          (
            request.resource.data.role == 'admin' &&
            request.auth.token.email == 'sinbun001@gmail.com'
          )
        );
      allow update: if request.auth != null &&
        (
          isOwner() ||
          (
            request.auth.uid == userId &&
            request.resource.data.role == resource.data.role
          )
        );
    }

    // 관리자 승인 요청
    match /adminApprovalRequests/{requestUserId} {
      allow read: if request.auth != null &&
        (request.auth.uid == requestUserId || isOwner());

      // 본인만 관리자 승인 요청 생성/재요청 가능 (status: pending)
      allow create, update: if request.auth != null &&
        request.auth.uid == requestUserId &&
        request.resource.data.userId == request.auth.uid &&
        request.resource.data.status == 'pending';

      // 오너만 승인/거절/삭제 가능
      allow update, delete: if isOwner();
    }
    
    // 공연장 (공개 읽기)
    match /venues/{venueId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // 공연 이벤트 (공개 읽기)
    match /events/{eventId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // 공연장 시점 이미지 (공개 읽기, 관리자 쓰기)
    match /venueViews/{venueId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // 좌석 (관리자 쓰기 + 공개 읽기)
    match /seats/{seatId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // 주문 (본인 것만 읽기, 어드민은 모의 티켓용 쓰기 허용)
    match /orders/{orderId} {
      allow read: if request.auth != null &&
        (request.auth.uid == resource.data.userId || isAdmin());
      allow create: if isAdmin(); // 어드민: 모의 티켓 생성용
      allow update: if isAdmin();
    }

    // 좌석 블록 (본인 것만 + 어드민)
    match /seatBlocks/{blockId} {
      allow read: if request.auth != null &&
        (
          resource.data.userId == request.auth.uid ||
          (resource.data.orderId is string && isOrderOwner(resource.data.orderId)) ||
          isAdmin()
        );
      allow create: if isAdmin(); // 어드민: 모의 티켓 생성용
      allow update: if isAdmin();
    }

    // 티켓 (본인 것만 읽기, 어드민은 모의 티켓용 쓰기 허용)
    match /tickets/{ticketId} {
      allow read: if request.auth != null &&
        (request.auth.uid == resource.data.userId || isAdmin() || isStaff());
      allow create: if isAdmin(); // 어드민: 모의 티켓 생성용
      allow update: if isAdmin();
    }
    
    // 체크인 기록 (스태프/어드민만)
    match /checkins/{checkinId} {
      allow read: if isStaff() || isAdmin();
      allow write: if false; // Functions에서만
    }

    // 정산 (어드민만)
    match /settlements/{settlementId} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }

    // 에스크로 계정 (어드민만)
    match /escrowAccounts/{accountId} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }

    // 에스크로 트랜잭션 (어드민만)
    match /escrowTransactions/{txId} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }

    // 마일리지 내역 (본인 것만 읽기)
    match /mileageHistory/{historyId} {
      allow read: if request.auth != null &&
        (request.auth.uid == resource.data.userId || isAdmin());
      allow write: if false; // Functions에서만
    }

    // 리뷰 (공개 읽기, 본인만 쓰기)
    match /reviews/{reviewId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null &&
        request.auth.uid == resource.data.userId;
    }

    // Hall 커뮤니티 (공개 읽기)
    match /halls/{hallId} {
      allow read: if true;
      allow write: if isAdmin();

      match /posts/{postId} {
        allow read: if true;
        allow create: if request.auth != null;
        allow update, delete: if request.auth != null &&
          (request.auth.uid == resource.data.userId || isAdmin());

        match /comments/{commentId} {
          allow read: if true;
          allow create: if request.auth != null;
          allow update, delete: if request.auth != null &&
            (request.auth.uid == resource.data.userId || isAdmin());
        }
      }
    }

    // 공연장 요청 (셀러: 생성/읽기, 슈퍼어드민: 전체)
    match /venueRequests/{requestId} {
      allow read: if request.auth != null &&
        (request.auth.uid == resource.data.sellerId || isOwner());
      allow create: if request.auth != null;
      allow update: if isOwner();
    }
    
    function isOwner() {
      return request.auth != null &&
        request.auth.token.email == 'sinbun001@gmail.com';
    }

    // 헬퍼 함수: 어드민 확인
    function isAdmin() {
      return request.auth != null &&
        (
          isOwner() ||
          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'
        );
    }
    
    // 헬퍼 함수: 스태프 확인
    function isStaff() {
      return request.auth != null &&
        (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'staff' ||
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' ||
         isOwner());
    }

    function isOrderOwner(orderId) {
      return request.auth != null &&
        get(/databases/$(database)/documents/orders/$(orderId)).data.userId == request.auth.uid;
    }
  }
}
